<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UTB.RestauraciaWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/UTB.RestauraciaWeb.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <nav class="navbar navbar-expand-sm sticky-top bg-dark navbar-dark ">
        <div>
            <a class="navbar-brand logo" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/LogoUtb.png" width="100px" height="100px" alt="">
            </a>
        </div>
        <div class="container-fluid navbar-collapse collapse d-sm-inline-flex ">

            <ul class="navbar-nav nav-links flex-grow-1">
                <li class="nav-item "><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Domov</a></li>
                <li class="nav-item">
                @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Home" &&
                ViewContext.RouteData.Values["action"]?.ToString() == "Index")
                {
                    <a class="nav-link" href="#about">O nás</a>
                }
                else
                { 
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index" fragment="about">O nás</a>
                }
                </li>
                    <li class="nav-item"><a class="nav-link" href="#service">Menu</a></li>
                @if (User.Identity.IsAuthenticated == true && (User.IsInRole(nameof(Roles.Admin)) || User.IsInRole(nameof(Roles.Manager))))

                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Food" asp-action="Select">Foods</a>
                    </li>
                }
                @if (User.Identity.IsAuthenticated == true && (User.IsInRole(nameof(Roles.Admin)) || User.IsInRole(nameof(Roles.Manager))))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Menu" asp-action="Select">Menus</a>
                    </li>
                }
                </ul>
                @{
                    @if (User.Identity.IsAuthenticated == false)

                    {
                    <ul class="navbar-nav nav-links">
                            <li class="nav-item"><a class="nav-link " asp-area="Security" asp-controller="Account" asp-action="Register"><i class="bi bi-person-plus"></i> Register</a></li>
                            <li class="nav-item"><a class="nav-link " asp-area="Security" asp-controller="Account" asp-action="Login"><i class="bi bi-lock"></i> Login</a></li>
                        </ul>
                    }

                    else

                    {
                        <ul class="nav navbar-nav navbar-right">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="bi bi-person"></i> Logged as @User.Identity.Name</a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item text-dark" asp-area="Security" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-1"></i> Logout</a></li>
                                </ul>
                            </li>
                        </ul>
                    }
                }
            
        </div>

    </nav>

    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="custom-footer bg-dark">
        <div class="container">
            &copy; 2024 - UTB.RestauraciaWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
